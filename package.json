{
    "name": "ucph_cardgroup",
    "version": "1.0.0",
    "description": "Card group",
    "keywords": [
        "TYPO3",
        "Bootstrap",
        "PHP",
        "JavaScript"
    ],
    "author": "Nanna Ellegaard",
    "license": "MIT",
    "scripts": {
		"css-compile": "sass --style compressed --source-map --embed-sources --no-error-css \"Resources/Public/Scss/import.scss\" \"Resources/Public/Css/Dist/ucph-cardgroup.min.css\"",
		"css-lint": "stylelint \"Resources/Public/Scss/\"",
		"css-prefix": "postcss --config build/postcss.config.js --replace \"Resources/Public/Css/Dist/ucph-cardgroup.min.css\"",
		"css": "npm-run-all css-compile css-prefix",
		"watch-css": "onchange \"Resources/Public/Scss/**/*.scss\" -- npm-run-all css-compile css-lint css-prefix",
		"watch": "npm-run-all --parallel watch-*",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
    "devDependencies": {
        "autoprefixer": "^10.4.14",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss": "^8.4.24",
		"postcss-cli": "^10.1.0",
		"sass": "^1.63.6",
		"stylelint": "^15.9.0",
		"stylelint-config-twbs-bootstrap": "^11.0.0"
    }
}